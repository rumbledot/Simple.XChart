<div class="row">
    <div class="col-md-2 today-date">
        <h1>@todaysDate.Day</h1>
        <p>@todaysDate.ToString("MMM")</p>
    </div>
    <div class="col-md-10 today-verse">
        @if (todaysVerse is null)
        {
            <p>loading...</p>
        }
        else
        {
            <p>@todaysVerse.verse.details.text</p>
            <span>@todaysVerse.verse.details.reference (@todaysVerse.verse.details.version)</span>
        }
    </div>
</div>